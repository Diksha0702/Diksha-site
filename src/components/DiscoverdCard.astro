---
const { title, content, image } = Astro.props;

---

  <div class="card">
  <div class="text-content">
    <h2>{title}</h2>
    <p>{content}</p>
  </div>
  <div class="image-box">
   <img src={image}>
  </div>
</div>

<style>
  .card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    background-color: #ece8ff; /* Light purple */
    border-radius: 10px;
    padding: 20px;
    max-width: 800px;
    gap: 20px;
    align-items: start;
    margin-bottom: 20px;
  }

  .text-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .text-content h2 {
    margin: 0 0 10px;
    font-size: 1.5em;
  }

  .text-content p {
    margin: 0;
    font-size: 1em;
    line-height: 1.5;
  }

  img{
    height: 200px;
    object-fit: cover;
  }
  .image-box {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>